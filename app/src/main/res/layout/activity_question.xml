<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/score_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:text="Score: 0/10" />

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/score_text_view"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:text="Question" />

    <Button
        android:id="@+id/answer_1_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_text_view"
        android:text="Option 1"
        android:textSize="20sp" />

    <Button
        android:id="@+id/answer_2_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer_1_button"
        android:layout_marginTop="10dp"
        android:text="Option 2"
        android:textSize="20sp" />

    <Button
        android:id="@+id/answer_3_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer_2_button"
        android:layout_marginTop="10dp"
        android:text="Option 3"
        android:textSize="20sp" />

    <Button
        android:id="@+id/answer_4_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer_3_button"
        android:layout_marginTop="10dp"
        android:text="Option 4"
        android:textSize="20sp" />

    <Button
        android:id="@+id/next_question_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer_4_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:text="Next"
        android:visibility="gone" />

</RelativeLayout>


